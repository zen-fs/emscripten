{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"outDir": "dist",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "NodeNext",
		"declaration": true,
		"noImplicitThis": true,
		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
